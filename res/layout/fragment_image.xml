<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
		android:id="@+id/id_rl_select_icon"
		android:background="@drawable/relative_item"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal" >

  		<LinearLayout
        	android:layout_height="wrap_content"
        	android:layout_width="wrap_content"
        	android:layout_margin="10dp"
        	android:layout_alignParentLeft="true"
        	android:layout_centerVertical="true"
        	android:orientation="vertical" >

        	<TextView
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:textColor="#000000"
            	android:text="@string/select_icon"
            	android:textSize="17sp" />

    	</LinearLayout>
    	
    	<ImageView
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"        
        	android:layout_alignParentRight="true"
        	android:layout_margin="10dp"
        	android:layout_centerVertical="true"        
        	android:src="@drawable/setting_arrow" />

	</RelativeLayout>
	
	<View  
   		android:layout_width="fill_parent"
    	android:layout_height="1px"
   		android:background="?android:attr/listDivider"  
	/>
	
	<RelativeLayout
		android:id="@+id/id_rl_adjust_alpha"
		android:background="@drawable/relative_item"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal" >

  		<LinearLayout
        	android:layout_height="wrap_content"
        	android:layout_width="wrap_content"
        	android:layout_margin="10dp"
        	android:layout_alignParentLeft="true"
        	android:layout_centerVertical="true"
        	android:orientation="vertical" >

        	<TextView
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:textColor="#000000"
            	android:text="@string/adjust_alpha"
            	android:textSize="17sp" />

    	</LinearLayout>
    	
    	<ImageView
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"        
        	android:layout_alignParentRight="true"
        	android:layout_margin="10dp"
        	android:layout_centerVertical="true"        
        	android:src="@drawable/setting_arrow" />

	</RelativeLayout>
	
	<View  
   		android:layout_width="fill_parent"
    	android:layout_height="1px"
   		android:background="?android:attr/listDivider"  
	/>

</LinearLayout>